<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="using:ModerBox.ViewModels"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 x:DataType="vm:FilterWaveformSwitchIntervalViewModel"
             x:Class="ModerBox.Views.UserControls.FilterWaveformSwitchInterval">
	<Design.DataContext>
		<!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
		<vm:FilterWaveformSwitchIntervalViewModel/>

	</Design.DataContext>
	<StackPanel Margin="20">
		<TextBlock Margin="0 5" >波形路径</TextBlock>
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="Auto" />
			</Grid.ColumnDefinitions>
			<TextBox Grid.Column="0" Margin="5" Watermark="输入待选择的路径" Text="{Binding SourceFolder}"/>
			<Button Grid.Column="1" Margin="5" Content="..." Command="{Binding SelectSource}" />
		</Grid>
		<TextBlock Margin="0 5" >输出路径</TextBlock>
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="Auto" />
			</Grid.ColumnDefinitions>
			<TextBox Grid.Column="0" Margin="5" Watermark="输入待选择的路径" Text="{Binding TargetFile}"/>
			<Button Grid.Column="1" Margin="5" Content="..." Command="{Binding SelectTarget}" />
		</Grid>
		<CheckBox Margin="5" IsChecked="{Binding UseNewAlgorithm}" Content="使用滑动窗口算法检测电流过零点 (推荐，鲁棒性更高，数值更准)" />
		<StackPanel Orientation="Horizontal" Margin="5" Spacing="10">
			<StackPanel Width="180">
				<TextBlock>IO线程数</TextBlock>
				<NumericUpDown Minimum="1" Maximum="64" Value="{Binding IoWorkerCount}" />
			</StackPanel>
			<StackPanel Width="180">
				<TextBlock>计算线程数</TextBlock>
				<NumericUpDown Minimum="1" Maximum="64" Value="{Binding ProcessWorkerCount}" />
			</StackPanel>
		</StackPanel>
		<TextBlock Margin="0 10 0 0">定时任务</TextBlock>
		<StackPanel Orientation="Horizontal" Margin="5" Spacing="10">
			<StackPanel Width="180">
				<TextBlock>周期</TextBlock>
				<ComboBox ItemsSource="{Binding ScheduleModeOptions}" SelectedItem="{Binding SelectedScheduleMode, Mode=TwoWay}" />
			</StackPanel>
			<StackPanel Width="180" IsVisible="{Binding IsWeekly}">
				<TextBlock>星期</TextBlock>
				<ComboBox ItemsSource="{Binding WeekDayOptions}" SelectedItem="{Binding SelectedWeekDay, Mode=TwoWay}" />
			</StackPanel>
		</StackPanel>
		<StackPanel Orientation="Horizontal" Margin="5" Spacing="10">
			<StackPanel Width="180">
				<TextBlock>小时</TextBlock>
				<NumericUpDown Minimum="0" Maximum="23" Value="{Binding ScheduleHour}" />
			</StackPanel>
			<StackPanel Width="180">
				<TextBlock>分钟</TextBlock>
				<NumericUpDown Minimum="0" Maximum="59" Value="{Binding ScheduleMinute}" />
			</StackPanel>
		</StackPanel>
		<StackPanel Orientation="Horizontal" Margin="5" Spacing="10">
			<Button Width="180" Content="启动定时任务" Command="{Binding StartSchedule}" IsEnabled="{Binding CanStartSchedule}" />
			<Button Width="180" Content="停止定时任务" Command="{Binding StopSchedule}" IsEnabled="{Binding CanStopSchedule}" />
		</StackPanel>
		<TextBlock Margin="5" Text="{Binding ScheduleStatusText}" />
		<Button Margin="5" Content="开始" Command="{Binding RunCalculate}" />
		<ProgressBar  Margin="0 10" Height="20"
                Minimum="0" Maximum="{Binding ProgressMax}" Value="{Binding Progress}"
                ShowProgressText="True"/>
	</StackPanel>
</UserControl>
