<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:ModerBox.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ModerBox.Views.UserControls.FilterWaveformSwitchCopy"
             x:DataType="vm:FilterWaveformSwitchCopyViewModel">

    <ScrollViewer>
        <StackPanel Margin="20" Spacing="15" MaxWidth="800" HorizontalAlignment="Left">
            
            <!-- 标题 (Title) -->
            <TextBlock Text="滤波器分合闸波形筛选复制" 
                       FontSize="24" 
                       FontWeight="SemiBold"
                       Margin="0,0,0,10"/>

            <!-- 第一组: 文件夹选择 -->
            <Border BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}" 
                    BorderThickness="1" CornerRadius="4" Padding="15">
                <StackPanel Spacing="10">
                    <TextBlock Text="文件夹设置" FontWeight="Bold"/>
                    
                    <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto,Auto">
                        <TextBox Grid.Row="0" Grid.Column="0" 
                                 Watermark="源文件夹路径 (包含录波文件)"
                                 Text="{Binding SourceFolder}" Margin="0,0,10,0"/>
                        <Button Grid.Row="0" Grid.Column="1" 
                                Command="{Binding SelectSourceFolderCommand}" 
                                Content="选择源文件夹"/>

                        <TextBox Grid.Row="1" Grid.Column="0" 
                                 Watermark="目标文件夹路径 (用于存放筛选后的文件)"
                                 Text="{Binding TargetFolder}" Margin="0,10,10,0"/>
                        <Button Grid.Row="1" Grid.Column="1" 
                                Command="{Binding SelectTargetFolderCommand}" 
                                Content="选择目标文件夹" Margin="0,10,0,0"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- 第二组: 筛选条件 -->
            <Border BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}" 
                    BorderThickness="1" CornerRadius="4" Padding="15">
                <StackPanel Spacing="10">
                    <TextBlock Text="筛选条件" FontWeight="Bold"/>

                    <StackPanel Orientation="Horizontal" Spacing="20">
                        <StackPanel>
                            <TextBlock Text="开始时间"/>
                            <DatePicker SelectedDate="{Binding StartDate}" Margin="0,5,0,0"/>
                            <TimePicker SelectedTime="{Binding StartTime}" Margin="0,5,0,0"/>
                        </StackPanel>
                        
                        <StackPanel>
                            <TextBlock Text="结束时间"/>
                            <DatePicker SelectedDate="{Binding EndDate}" Margin="0,5,0,0"/>
                            <TimePicker SelectedTime="{Binding EndTime}" Margin="0,5,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <CheckBox IsChecked="{Binding CheckSwitchChange}" 
                              Content="仅复制检测到开关变位的波形 (数字量 0->1 或 1->0)"/>
                    
                    <TextBox Watermark="通道名称过滤正则 (例如: .*Filter.*)" 
                             Text="{Binding ChannelNameRegex}"
                             IsEnabled="{Binding CheckSwitchChange}"/>
                </StackPanel>
            </Border>

            <!-- 进度与操作 -->
            <StackPanel Spacing="10">
                <ProgressBar Value="{Binding ProgressDetails.Percent}" 
                             Maximum="100" 
                             Height="20"
                             ShowProgressText="True"/>
                
                <TextBlock Text="{Binding ProgressDetails.Message}" 
                           TextWrapping="Wrap"/>
                
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <Button Command="{Binding RunCommand}" 
                            Classes="accent" 
                            Content="开始复制" 
                            IsEnabled="{Binding !IsRunning}"
                            Width="120" HorizontalContentAlignment="Center"/>
                    
                    <Button Command="{Binding CancelCommand}" 
                            Content="取消" 
                            IsEnabled="{Binding IsRunning}"
                            Width="100" HorizontalContentAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>
